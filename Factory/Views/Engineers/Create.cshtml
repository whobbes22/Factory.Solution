@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.EngineerName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  <p>Type of Machine: @Html.TextBoxFor(model => model.EngineerName)</p>
  <p>Engineer Description: @Html.TextBoxFor(model => model.EngineerDescription)</p>
     
  <input type="submit" value="Add Engineer"/>
}
<br>
<p>@Html.ActionLink("Show Engineers", "Index")</p>